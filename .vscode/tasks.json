{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "racket martaanvuo.rkt",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/src",
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            }
        },
        {
            "label": "Run with --restart",
            "type": "shell",
            "command": "racket martaanvuo.rkt --restart",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/src",
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            }
        },
        {
            "label": "Run with --seed 13 --restart",
            "type": "shell",
            "command": "racket martaanvuo.rkt --seed 13 --restart",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/src",
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "raco exe -o martaanvuo --vv src/martaanvuo.rkt",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            }
        },
        {
            "label": "Run compiled build",
            "type": "shell",
            "command": "./martaanvuo",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm save.txt Martaanvuo",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "always",
            }
        },
    ]
}